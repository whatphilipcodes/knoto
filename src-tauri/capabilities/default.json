{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "../dist-back/knoto-pyserver",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open",
    "dialog:default",
    "fs:allow-appconfig-read",
    "fs:allow-appconfig-write",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    "process:default"
  ]
}